<addon id="skin.Big-cirrus.Extended" version="1.0.15" name="Big-Cirrus.Extended" provider-name="Eraser">
	<requires>
		<import addon="xbmc.gui" version="2.11"/>
		<import addon="script.logo-downloader" version="2.3.0"/>
		<import addon="script.library.editor" version="1.0.0" />
		<import addon="script.recentlyadded" version="1.0.4"/>
		<import addon="script.randomitems" version="1.0.10"/>
		<import addon="script.nextaired" version="1.0.0"/>
		<import addon="script.TvTunes" version="0.8.0" />
		<import addon="script.skin.news" version="1.0.0" />
	</requires>
	<extension point="xbmc.gui.skin" defaultresolution="720p" defaultresolutionwide="720p" defaultthemename="textures.xbt" effectslowdown="0.75" debugging="false"/>
		<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<minversion app="xbmc">28000</minversion>
		<summary lang="en">Big-Cirrus.Extended skin by Eraser (Based on Big-Cirrus skin by GMib)</summary>
		<summary lang="ru">Big-Cirrus.Extended скин от Eraser (В основе скин Big-Cirrus от GMib)</summary>
		<description lang="en">Big-Cirrus.Extended is a modded version of GMib's Big-Cirrus skin modded. Cirrus is a lightweight skin which has a focus on speed, ease of use and ease of navigation. It also uses TV logos, cleararts, and cdart if you want them.</description>
		<description lang="ru">Big-Cirrus.Extended - мод скина Big-Cirrus.</description>
	</extension>
</addon>

